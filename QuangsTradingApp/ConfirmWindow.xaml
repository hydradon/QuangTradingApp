<Window x:Class="QuangsTradingApp.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuangsTradingApp"
        mc:Ignorable="d"
        Title="Confirming trade" Height="228" Width="300">
    <Grid Background="Lavender">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Name="ConfirmMessage" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="OKButton"     IsDefault="True" VerticalAlignment="Center" Margin="0 0 5 0" Click="ConfirmButton_Click">Confirm</Button>
            <Button Name="CancelButton" IsCancel="True"  VerticalAlignment="Center">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
